@model CreateEventReviewViewModel

<div class="row">
    <div class="col col-md-4">
        <h2>Review @Model.events.Title</h2>

        <form asp-controller="Reviews" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="reviews.Email"></label>
                <input asp-for="reviews.Email" class="form-control" />
            </div>

            <input type="hidden" asp-for="reviews." value="@Model.events.Id" />

            <input type="submit" class="btn btn-success" />

        </form>
    </div>
</div>

